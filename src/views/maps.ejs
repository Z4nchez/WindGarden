    <script>

        const mAndino = document.getElementById("Andino");
        const mSonora = document.getElementById("Sonora");
        const mAustralia = document.getElementById("Australiano");
        const mSahara = document.getElementById("Sahara");
        const mThar = document.getElementById("Thar");
        const mArabia = document.getElementById("Arabia");
        const mKarakum = document.getElementById("Karakum");
        const mGobi = document.getElementById("Gobi");
        const mIran = document.getElementById("Iran");
        const mKalahari = document.getElementById("Kalahari");
        const titulo = document.getElementById("tituloMap");
        const art1 = document.getElementById("art1Map");
        const art2 = document.getElementById("art2Map");
        const art3 = document.getElementById("art3Map");
        const img1 = document.getElementById("imgC1");
        const img2 = document.getElementById("imgC2");
        const img3 = document.getElementById("imgC3");
        const botonC = document.getElementById("buttonC");

        function cargarRegion(nombre){ //funcion ajax
            fetch('obtenerDB', {
                method: "POST",
                headers: {"Content-Type" : "application/json"},
                body: JSON.stringify({dato: nombre})
            })
            .then(res => res.json())
            .then(data => {
                titulo.textContent = data[0].titulo;
                art1.textContent = data[0].articulo1;
                art2.textContent = data[0].articulo2;
                art3.textContent = data[0].articulo3;
                img1.src = data[0].imagen1;
                img2.src = data[0].imagen2;
                img3.src = data[0].imagen3;
                document.querySelector(".botonC").classList.toggle("botonC_active")
                document.querySelector(".mapa_info").classList.toggle("mapa_info_active")
                document.querySelector(".mapa_c").classList.toggle("mapa_c_inactive")
            })
        } 

        mAndino.addEventListener("click", () =>{
            cargarRegion(mAndino.id);
        })
        mSonora.addEventListener("click", () =>{
            cargarRegion(mSonora.id);
        })
        mAustralia.addEventListener("click", () =>{
            cargarRegion(mAustralia.id);
        })
        mSahara.addEventListener("click", () =>{
            cargarRegion(mSahara.id);
        })
        mArabia.addEventListener("click", () =>{
            cargarRegion(mArabia.id);
        }) 
        mIran.addEventListener("click", () =>{
            cargarRegion(mIran.id);
        }) 
        mThar.addEventListener("click", () =>{
            cargarRegion(mThar.id);
        }) 
        mKarakum.addEventListener("click", () =>{
            cargarRegion(mKarakum.id);
        }) 
        mGobi.addEventListener("click", () =>{
            cargarRegion(mGobi.id);
        }) 
        mKalahari.addEventListener("click", () =>{
            cargarRegion(mKalahari.id);
        })         

        botonC.addEventListener("click", () => {
            titulo.textContent = "";
            art1.textContent = "";
            art2.textContent = "";
            document.querySelector(".botonC").classList.remove("botonC_active")
            document.querySelector(".mapa_info").classList.remove("mapa_info_active")
            document.querySelector(".mapa_info").scrollTop = 0;
            document.querySelector(".mapa_c").classList.remove("mapa_c_inactive")
        })

    </script>
